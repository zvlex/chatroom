%header
  %nav.pure-menu.pure-menu-horizontal.main-nav-menu
    = link_to 'Home', root_url, class: 'pure-menu-heading pure-menu-link'

    %ul.pure-menu-list
      %li.pure-menu-item
        = link_to 'Rooms', rooms_path, class: 'pure-menu-link'

    %ul.pure-menu-list.float-right
      - if logged_in?
        %li.pure-menu-item
          = link_to 'Create Room', new_room_path, class: 'pure-button pure-button-primary'
        %li.pure-menu-item
          = link_to 'Profile', '#', class: 'pure-button'
        %li.pure-menu-item
          = link_to 'Logout', :logout, method: :post, class: 'pure-button pure-button-primary'

      - else
        %li.pure-menu-item
          = link_to 'Sign in', :sign_in, class: 'pure-menu-link'
        %li.pure-menu-item
          = link_to 'Registration', :sign_up, class: 'pure-button pure-button-primary'
