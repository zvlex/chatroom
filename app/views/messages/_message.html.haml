- cache message do
  .pure-g.message
    .pure-u-1-3
      %i.fa.fa-paper-plane-o
        %span.msg-user-email #{message.user.username}
    .pure-u-1-3
    .pure-u-1-3
      %i.fa.fa-clock-o.float-right.font-size-12
        %small.msg-created-at #{message.created_at}
    .pure-g
      .pure-u-1.msg-body-block
        %span.msg-body
          = message.content
