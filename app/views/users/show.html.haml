.pure-g
  .pure-u-1-5
  .pure-u-3-5
    %h2.profile-title Profile: #{@user.username}

.pure-g
  .pure-u-1-5
  .pure-u-3-5
    .pure-g
      .pure-u-1.profile-info-row
        .pure-u-1-5
          #{ User.human_attribute_name(:username) }:
        .pure-u-2-5
          = @user.username

      - if @user == current_user
        .pure-u-1.profile-info-row
          .pure-u-1-5
            #{ User.human_attribute_name(:email) }:
          .pure-u-2-5
            = @user.email

      .pure-u-1.profile-info-row
        .pure-u-1-5
          #{ User.human_attribute_name(:created_at) }:
        .pure-u-2-5
          = created_at(@user.created_at)
  .pure-u-1-5


.pure-g
  .pure-u-1-5
  .pure-u-3-5
    %h2.profile-title Rooms member:

.pure-g
  .pure-u-1-5
  .pure-u-3-5
    .pure-g
      .pure-u-1.profile-info-row
        [
        - @joined_rooms.each do |room_id, room_name|
          %span
            = link_to room_name, room_path(room_id)
        ]